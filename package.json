{
  "name": "user-service",
  "version": "1.0.0",
  "description": "An examplatory micro-service for user management",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "nyc mocha 'test/unit-tests/**/*test.js' --watch",
    "system-tests": "mocha ./test/system-tests/*.js --timeout 5000"
  },
  "author": "Gordon",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "cassandra-driver": "^4.5.0",
    "dredd": "^13.0.2",
    "express": "^4.17.3",
    "graceful-shutdown-express": "^2.0.1",
    "ip-address": "^6.3.0",
    "is-uuid": "^1.0.2",
    "lodash": "^4.17.15",
    "openapi-validator-middleware": "^2.0.1",
    "pkginfo": "^0.4.1",
    "prom-client": "^12.0.0",
    "prometheus-api-metrics": "^2.2.3",
    "request-ip": "^2.1.3",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "mocha": "^7.1.1",
    "node-mocks-http": "^1.8.1",
    "nyc": "^15.0.0",
    "request-promise": "^4.2.5",
    "should": "^13.2.3",
    "sinon": "^9.0.1"
  },
  "nyc": {
    "check-coverage": true,
    "include": [
      "**/*.js",
      "**/**/*.js"
    ],
    "exclude": [
      "**/src/env.js",
      "**/scripts/*",
      "**/index.js",
      "**/test/**/**/*.js",
      "**/routes/*.js"
    ],
    "cache": true,
    "all": true
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  }
}
